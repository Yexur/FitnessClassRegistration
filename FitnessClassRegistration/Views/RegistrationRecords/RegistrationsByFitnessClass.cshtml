@model IEnumerable<FitnessApp.Models.ApplicationViewModels.RegistrationRecordView>

@{
    ViewData["Title"] = "User Registrations for ";
}

<h2>@ViewData["Title"] + @Model.FirstOrDefault().FitnessClass.FitnessClassType.Name</h2>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Attended)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Attended)
                </td>
            </tr>
            }
        </tbody>
    </table>
