@model FitnessApp.Models.ApplicationViewModels.AnnouncementView
<div class="form-group">
    <label asp-for="Title" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Comment" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <textarea rows="10" asp-for="Comment" class="form-control"></textarea> 
        <span asp-validation-for="Comment" class="text-danger" />
    </div>
</div>